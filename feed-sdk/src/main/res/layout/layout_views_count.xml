<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sub_title_text_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="MissingConstraints,RtlHardcoded,UseCompoundDrawables">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_play"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_play"
        app:layout_constraintBottom_toBottomOf="@id/views_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <com.rizzle.sdk.faas.customviews.StyledTextView
        android:id="@+id/views_count"
        style="@style/BODY_2_REGULAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@color/white"
        app:colorType="SHADE_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ic_play"
        app:layout_constraintTop_toTopOf="parent"
        app:styleType="BODY_2_REGULAR"
        tools:ignore="SmallSp"
        tools:text="113 views" />
</androidx.constraintlayout.widget.ConstraintLayout>

