<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/gray_main"
    android:gravity="center"
    android:orientation="vertical">


    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:indicatorColor="@color/gray_main"
        app:trackColor="@color/neon_green"
        app:trackThickness="2dp" />

    <com.rizzle.sdk.faas.customviews.StyledTextView
        android:id="@+id/last_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8"
        android:layout_marginBottom="40dp"
        android:text="@string/last_item_loading"
        android:textColor="@color/white"
        app:colorType="SHADE_1"
        style="@style/BODY_1_SEMI_BOLD"
        app:styleType="BODY_1_SEMI_BOLD"
        />

</LinearLayout>